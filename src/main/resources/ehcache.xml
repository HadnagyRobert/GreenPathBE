<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="false"
         monitoring="autodetect"
         dynamicConfig="true">

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            maxElementsInMemory="10000"
            eternal="false"
            overflowToDisk="false"
            timeToLiveSeconds="86400">
    </defaultCache>

    <cache name="DataSensorCommunityApi"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="86400">
    </cache>

    <cache name="RivmApi"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="86400">
    </cache>

    <cache name="EindhovenApi"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="86400">
    </cache>

    <cache name="EindhovenApiSoundQuality"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="86400">
    </cache>

</ehcache>